@model the_law.Models.law

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .form-control {
        max-width: none;
    }

    .form-group {
        margin-bottom: 20px;
    }

    textarea {
        height: 300px
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h3>Chỉnh sửa luật điều @Html.DisplayFor(model => model.dieu)</h3>        
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <label class="control-label col-md-2">
            Điều:
        </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.dieu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.dieu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Tên điều luật:
        </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Nội dung:
        </label>
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.noidung, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.noidung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Chỉnh sửa điều luật" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
