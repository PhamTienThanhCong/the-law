
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container-fluid h-custom mt-lg-5"">
        <h3 class="text-center mb-lg-5"">
            Đăng nhập vào trang quản trị
        </h3>
        <span class="text-danger">
            @ViewBag.ErrorMessage
        </span>
        <form class="w-100 flex-column" method="post">
            <div class="form-group mb-4">
                <label for="exampleInputEmail1">Tài khoản</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="mssv" aria-describedby="emailHelp" placeholder="Tài khỏan" style="max-width: none">
            </div>
            <div class="form-group mb-4">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password" style="max-width: none">
            </div>
            <div class="form-group mb-4 text-center">
                <button type="submit" class="btn btn-primary w-75">Đăng nhập</button>
            </div>
        </form>
    </div>
</section>

