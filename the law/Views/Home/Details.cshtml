@model the_law.Models.law

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .details-container {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #f5f5f5;
    }

        .details-container h4 {
            margin-bottom: 10px;
        }

        .details-container hr {
            border-color: #ddd;
        }

    .dl-horizontal dt {
        width: 120px;
        font-weight: bold;
    }
</style>

<div class="details-container">
    <h4>Thông tin chi tiết</h4>
    <hr />
    <dl class="dl-horizontal">
        <p>
            <b>
                Điều: 
            </b>
            @Html.DisplayFor(model => model.dieu)
        </p>

        <p>
            <b>Tên: </b>
            @Html.DisplayFor(model => model.ten)
        </p>


        <p>
            <b>
                Nội dung
            </b>
            <span style="white-space: pre-line">
                @Html.DisplayFor(model => model.noidung)
            </span>
        </p>

    </dl>
</div>

<style>
    .custom-button {
        padding: 8px 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 20px;
    }

        .custom-button:hover {
            background-color: #0056b3;
        }

    .back-link {
        color: #fff;
        text-decoration: none;
    }
</style>

<button class="custom-button">
    @Html.ActionLink("Trở về", "Index", null, new { @class = "back-link" })
</button>